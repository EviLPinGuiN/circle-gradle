<idea-plugin>
    <id>com.itis.circle</id>
    <name>CircleCI plugin</name>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">
        Dinmukhametov Aynur,
        Shaykhraziev Nail
    </vendor>

    <description><![CDATA[
         CircleCI integration plugin
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="CircleCI" icon="/icons/ic_circle.png" anchor="right"
                    factoryClass="gui.ShowWindows"/>
        <applicationConfigurable groupId="tools" id="circle.configurable" displayName="CircleCI"
                                 instance="gui.SetTokenSettings"/>
        <applicationService serviceInterface="gui.StaticComponents" serviceImplementation="gui.StaticComponents"/>
    </extensions>

    <depends>com.intellij.modules.lang</depends>

    <actions>
        <action id="CircleCI.refreshALL" class="actions.RefreshProjects" text="Refresh All"
                icon="/icons/ic_refresh20.png"/>
        <group id="CircleCI.ProcessesToolbar">
            <reference id="CircleCI.refreshALL"/>
            <!--<reference id="HolyProject.RecreateProcesses"/>-->
            <!--<separator/>-->
            <!--<reference id="HolyProject.ExpandAll"/>-->
            <!--<reference id="HolyProject.CollapseAll"/>-->
        </group>
    </actions>
</idea-plugin>